<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
<script src="~/Content/js/spin.min.js"></script>
<style>
    .header .head-a02 {
        color: #999999;
        padding-top: 30px;
    }

        .header .head-a02 span {
            position: relative;
            display: block;
            width: 425px;
