@using CheDaiBaoWeChatModel.Models;
@model Borrow
@{
    ViewBag.Title = "捷运好车还款";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="target-densitydpi=device-dpi,width=640, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="format-detection" content="telephone=no" />
    <title>还款</title>
    <style type="text/css">
        .jinedu {
            width: 100%;
            /*height:15rem;*/
            padding-bottom: 2.5rem;
            background: #fff;
            border: 1px solid #ebf0f2;
            border-left: none;
            border-right: none;
            text-align: center;
        }

            .jinedu .title {
                padding-top: 2.8rem;
            }

                .jinedu .title span {
                    color: #141414;
                    font-size: 1.4rem;
                }

            .jinedu .money {
                padding-top: 0.5rem;
            }

                .jinedu .money span {
                    color: #ff8132;
                    font-size: 3rem;
                }

            .jinedu p {
                padding-top: 1rem;
                color: #999999;
                font-size: 1.4rem;
            }

        .mingxi {
            margin-top: 1.6rem;
            background: #fff;
            border: 1px solid #ebf0f2;
            border-left: none;
            border-right: none;
            /*text-align:center;*/
        }

            .mingxi .item {
                padding-top: 2rem;
                /*padding-bottom: 1.5rem;*/
                border-top: 1px solid #ededf0;
            }

                .mingxi .item p {
                    padding-left: 2rem;
                    font-size: 1.6rem;
                    color: #403f3f;
                }

                .mingxi .item ul {
                    padding: 1.5rem 2rem 0;
                }

                    .mingxi .item ul li {
                        position: relative;
                        font-size: 1.4rem;
                        padding-bottom: 2rem;
                        color: #8d8d8d;
                    }

                        .mingxi .item ul li span:last-child {
                            position: absolute;
                            right: 0;
                            top: 0;
                        }

        input, button {
            border: 0;
            box-shadow: none;
            padding: 5px;
            box-sizing: border-box;
            height: 100px;
            width: 90%;
            display: block;
            background: #3697d5;
            color: #ffffff;
            border-radius: 4px;
            -webkit-border-radius: 4px;
            margin: 0 auto;
            margin-top: 26px;
            margin-bottom: 30px;
            font-size: 30px;
        }
    </style>
</head>
<body class="bodybg">

    @if (Model == null)
    {
        <p class="bq003" style="font-size: 2rem; line-height: 2rem; text-align: center">您还没有账单记录</p>
    }
    else
    {
        if (Model.RepaymentPlanMode == 0)
        {
        <div class="jinedu">
            <div class="title">
                <span>未还金额（元）</span>
            </div>
            <div class="money">
                <span>@Model.UnTotalInterest.Value.ToString("N2")</span>
            </div>
            <p>好借好还，再借不难</p>
        </div>

        <div class="mingxi">
            <div class="item">
                <p>借款明细</p>
                <ul>
                    @*        <li>
                        <span>借款金额</span>
                        <span>5,000.00</span>
                    </li>*@

                    <li>
                        <span>还款期限</span>
                        <span>@Model.RepaymentDate</span>
                    </li>

                    <li>
                        <span>还款方式</span>
                        <span>线下充值还款
                        </span>
                    </li>

                </ul>
            </div>

            <div class="item">
                <p>还款明细</p>
                <ul>
                    <li>
                        <span>未还金额</span>
                        <span>@Model.UnTotalInterest.Value.ToString("N2")</span>
                    </li>

                    <li>
                        <span>账单明细</span>
                        <a href="~/GodService/CarLoanRecord"><span style="color: #006fe3">查看</span></a>
                    </li>
                </ul>
            </div>
        </div>
        
        <button onclick="fn_huankuan()">立即还款</button>
        }
        else
        {
        <div class="jinedu">
            <div class="title">
                <span>已还金额（元）</span>
            </div>
            <div class="money">
                <span>@Model.ExpectedInterest.Value.ToString("N2")</span>
            </div>
            <p>好借好还，再借不难</p>
        </div>

        <div class="mingxi">
            <div class="item">
                <p>借款明细</p>
                <ul>
                    <li>
                        <span>还款日期</span>
                        <span>@Model.ActualRepaymentDate</span>
                    </li>

                    <li>
                        <span>还款方式</span>
                        <span>线下充值还款
                        </span>
                    </li>

                    <li>
                        <span>借款合同</span>
                        <span style="color: #006fe3">查看</span>
                    </li>
                </ul>
            </div>

            <div class="item">
                <p>还款明细</p>
                <ul>
                    <li>
                        <span>已还金额</span>
                        <span>@Model.ExpectedInterest.Value.ToString("N2")</span>
                    </li>

                    <li>
                        <span>账单明细</span>
                        <a href="~/GodService/CarLoanRecord"><span style="color: #006fe3">查看</span></a>
                    </li>
                </ul>
            </div>
        </div>
        }
    }
    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script type="text/javascript">
        function fn_huankuan() {
            $.post("HuanKuan", {
                Amount: "@Model.UnTotalInterest.Value.ToString("N2")",
                rn: Math.random()
            }, function (json) {
                alert(json);
            });
        }
    </script>
</body>
</html>
