@using CheDaiBaoWeChatModel.Models;
@model List<CarType>
@{
    ViewBag.Title = "选择车型";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="target-densitydpi=device-dpi,width=640, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="format-detection" content="telephone=no" />
    <link href="~/Content/css/cartype.css" rel="stylesheet" />
    <link href="~/Content/css/swiper-3.3.1.min.css" rel="stylesheet" />
    <style>
        .swiper-container {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .swiper-slide {
            overflow: auto;
        }
    </style>
</head>
<body>
    <div class="trad-head clearfix">
        <a class="current" href="javascript:;">快车车型</a>
        <a href="javascript:;">专车车型</a>
        <a href="javascript:;">商务车型</a>
    </div>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarType carType in Model.FindAll(o => o.OperateModelId == 0))
                    {
                        <a href="~/Loan/Finance?Id=@carType.Id">
                            <ul class="list-item">
                                <li>
                                    <img src="@carType.ImageUrl" style="width:157px; height:138px" />
                                </li>
                                <li>
                                    <p class="title">提车费：@carType.LiftFares.Value.ToString("N0") 元</p>
                                    <p class="title">尾款：@carType.Retainage.Value.ToString("N0") 元</p>
                                </li>
                                <li>
                                    <p class="title">月供：@carType.MonthPrice.Value.ToString("N0") 元</p>
                                    <p class="title">期数：@carType.Stages.ToString("N0") 期</p>
                                </li>
                            </ul>
                        </a>
                    }
                </div>
            </div>
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarType carType in Model.FindAll(o => o.OperateModelId == 1))
                    {
                        <a href="~/Loan/Finance?Id=@carType.Id">
                            <ul class="list-item">
                                <li>
                                    <img src="@carType.ImageUrl" style="width:157px; height:138px" />
                                </li>
                                <li>
                                    <p class="title">提车费：@carType.LiftFares.Value.ToString("N0") 元</p>
                                    <p class="title">尾款：@carType.Retainage.Value.ToString("N0") 元</p>
                                </li>
                                <li>
                                    <p class="title">月供：@carType.MonthPrice.Value.ToString("N0") 元</p>
                                    <p class="title">期数：@carType.Stages.ToString("N0") 期</p>
                                </li>
                            </ul>
                        </a>
                    }
                </div>
            </div>
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarType carType in Model.FindAll(o => o.OperateModelId == 2))
                    {
                        <a href="~/Loan/Finance?Id=@carType.Id">
                            <ul class="list-item">
                                <li>
                                    <img src="@carType.ImageUrl" style="width:157px; height:138px"  />
                                </li>
                                <li>
                                    <p class="title">提车费：@carType.LiftFares.Value.ToString("N0") 元</p>
                                    <p class="title">尾款：@carType.Retainage.Value.ToString("N0") 元</p>
                                </li>
                                <li>
                                    <p class="title">月供：@carType.MonthPrice.Value.ToString("N0") 元</p>
                                    <p class="title">期数：@carType.Stages.ToString("N0") 期</p>
                                </li>
                            </ul>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/swiper.jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        var mySwiper = new Swiper('.swiper-container', {
            onSlideChangeStart: function (swiper) {
                var index = swiper.activeIndex;
                $(".trad-head a").removeClass('current');
                $(".trad-head a").eq(index).addClass('current');
            }
        });
        $(".trad-head a").click(function () {
            var index2 = $(this).index();
            $(".trad-head a").removeClass('current');
            $(".trad-head a").eq(index2).addClass('current');
            mySwiper.slideTo(index2);//切换到第一个slide，速度为1秒
        });

    });
</script>
