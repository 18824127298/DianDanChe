    <script src="~/Content/js/Validform_v5.3.2_min.js"></script>
    <script type="text/javascript">
        function fn_tijiao() {
            if ($("#CreditPhone").val() == "") {
                alert("请填写手机号");
                return false;
            }
            var mobile = $.trim($("#CreditPhone").val());
            var regmobile = /^1\d{10}$/;
            if (regmobile.test(mobile) == false) {
                alert("手机号码错误，请重新输入");
                return false;
            }
            $("#EssentialInformation").submit();
        }

        function fn_xiayibu() {
            $("#qd2").show();
            $("#qd1").hide();
        }

        function fn_fanhui() {
            $("#qd2").hide();
            $("#qd1").show();
        }

        function fn_xiayibu1() {
            $("#qd3").show();
            $("#qd2").hide();
        }

        function fn_fanhui1() {
            $("#qd3").hide();
            $("#qd2").show();
        }

        function fn_xiayibu2() {
            $("#qd4").show();
            $("#qd3").hide();
        }

        function fn_fanhui2() {
            $("#qd4").hide();
            $("#qd3").show();
        }

        function fn_xiayibu3() {
            $("#qd5").show();
            $("#qd4").hide();
            $("#tijiao").show();
        }

        function fn_fanhui3() {
            $("#qd5").hide();
            $("#qd4").show();
            $("#tijiao").hide();
        }


    </script>


