                        <option value="广州众宇305" @(Model.RecruitmentName == "广州众宇305" ? "selected = \"selected\"" : "")>广州众宇305</option>
                        <option value="广州骑士之家" @(Model.RecruitmentName == "广州骑士之家" ? "selected = \"selected\"" : "")>广州骑士之家</option>
                        <option value="广州丰兴广场" @(Model.RecruitmentName == "广州丰兴广场" ? "selected = \"selected\"" : "")>丰兴广场</option>
                        <option value="广州优才" @(Model.RecruitmentName == "广州优才" ? "selected = \"selected\"" : "")>广州优才</option>
                        <option value="广州邦忙体育西" @(Model.RecruitmentName == "广州邦忙体育西" ? "selected = \"selected\"" : "")>广州邦忙体育西</option>
                        <option value="广州东盛广场" @(Model.RecruitmentName == "广州东盛广场" ? "selected = \"selected\"" : "")>广州东盛广场</option>
                        <option value="东莞邦忙南城" @(Model.RecruitmentName == "东莞邦忙南城" ? "selected = \"selected\"" : "")>东莞邦忙南城</option>
                        <option value="东莞盈立宝寮步" @(Model.RecruitmentName == "东莞盈立宝寮步" ? "selected = \"selected\"" : "")>东莞盈立宝寮步</option>
                        <option value="广州瑞祥尚雅小区" @(Model.RecruitmentName == "广州瑞祥尚雅小区" ? "selected = \"selected\"" : "")>广州瑞祥尚雅小区</option>
                        <option value="广州亿博燕塘" @(Model.RecruitmentName == "广州亿博燕塘" ? "selected = \"selected\"" : "")>广州亿博燕塘</option>
                        <option value="广州正方江夏" @(Model.RecruitmentName == "广州正方江夏" ? "selected = \"selected\"" : "")>广州正方江夏</option>
                        <option value="广州众宇东山广场" @(Model.RecruitmentName == "广州众宇东山广场" ? "selected = \"selected\"" : "")>广州众宇东山广场</option>
                        <option value="东莞优才" @(Model.RecruitmentName == "东莞优才" ? "selected = \"selected\"" : "")>东莞优才</option>
                        <option value="正方厦滘" @(Model.RecruitmentName == "正方厦滘" ? "selected = \"selected\"" : "")>正方厦滘</option>
                        <option value="佛山优才" @(Model.RecruitmentName == "佛山优才" ? "selected = \"selected\"" : "")>佛山优才</option>
                        <option value="正方人力鱼珠站点" @(Model.RecruitmentName == "正方人力鱼珠站点" ? "selected = \"selected\"" : "")>正方人力鱼珠站点</option>
                        <option value="嘉禾望岗" @(Model.RecruitmentName == "嘉禾望岗" ? "selected = \"selected\"" : "")>嘉禾望岗</option>
                        <option value="广州昌岗优才" @(Model.RecruitmentName == "广州昌岗优才" ? "selected = \"selected\"" : "")>广州昌岗优才</option>
                        <option value="巨业天河客运站" @(Model.RecruitmentName == "巨业天河客运站" ? "selected = \"selected\"" : "")>巨业天河客运站</option>
                        <option value="东莞巨业" @(Model.RecruitmentName == "东莞巨业" ? "selected = \"selected\"" : "")>东莞巨业</option>
                    </select></span></li>
                <li>&nbsp;入职站点名称 <span>
                    <input type="text" name="EntrySiteName" id="EntrySiteName" value="@Model.EntrySiteName" class="fxf gx" style="border: 0px" datatype="m" placeholder="入职站点名称"></span> </li>

                <li>&nbsp;站点地址 <span>
                    <input type="text" name="SiteAddress" id="SiteAddress" value="@Model.SiteAddress" class="fxf gx" style="border: 0px" datatype="m" placeholder="站点地址"></span> </li>

                <li>&nbsp;站长电话 <span>
                    <input type="tel" name="StationMasterPhone" id="StationMasterPhone" value="@Model.StationMasterPhone" class="fxf gx" style="border: 0px" datatype="m" placeholder="站长电话"></span> </li>

                <li>&nbsp;品牌 <span>
                    <select id="Brand" name="Brand">
                        <option value="康景" @(Model.Brand == "康景" ? "selected = \"selected\"" : "")>康景</option>
                        <option value="愉途" @(Model.Brand == "愉途" ? "selected = \"selected\"" : "")>愉途</option>
                        <option value="巨高" @(Model.Brand == "巨高" ? "selected = \"selected\"" : "")>巨高</option>
                        <option value="雅迪" @(Model.Brand == "雅迪" ? "selected = \"selected\"" : "")>雅迪</option>
                        <option value="相悦" @(Model.Brand == "相悦" ? "selected = \"selected\"" : "")>相悦</option>
                        <option value="豪晨" @(Model.Brand == "豪晨" ? "selected = \"selected\"" : "")>豪晨</option>
                        <option value="深远" @(Model.Brand == "深远" ? "selected = \"selected\"" : "")>深远</option>
                        <option value="鑫泽" @(Model.Brand == "鑫泽" ? "selected = \"selected\"" : "")>鑫泽</option>
                        <option value="东方澳玛" @(Model.Brand == "东方澳玛" ? "selected = \"selected\"" : "")>东方澳玛</option>
                        <option value="巨高电动车" @(Model.Brand == "巨高电动车" ? "selected = \"selected\"" : "")>巨高电动车</option>
                        <option value="踏迪" @(Model.Brand == "踏迪" ? "selected = \"selected\"" : "")>踏迪</option>
                        <option value="台铃" @(Model.Brand == "台铃" ? "selected = \"selected\"" : "")>台铃</option>
                    </select></span></li>
                <li>&nbsp;型号 <span>
                    <select id="CheType" name="CheType">
                        <option value="依兰公主" @(Model.CheType == "依兰公主" ? "selected = \"selected\"" : "")>依兰公主</option>
                        <option value="TDT071Z" @(Model.CheType == "TDT071Z" ? "selected = \"selected\"" : "")>TDT071Z</option>
                        <option value="TDR1033Z" @(Model.CheType == "TDR1033Z" ? "selected = \"selected\"" : "")>TDR1033Z</option>
                        <option value="外卖车" @(Model.CheType == "外卖车" ? "selected = \"selected\"" : "")>外卖车</option>
                        <option value="金犬" @(Model.CheType == "金犬" ? "selected = \"selected\"" : "")>金犬</option>
                        <option value="TDT-108Z" @(Model.CheType == "TDT-108Z" ? "selected = \"selected\"" : "")>TDT-108Z</option>
                        <option value="TDT02Z" @(Model.CheType == "TDT02Z" ? "selected = \"selected\"" : "")>TDT02Z</option>
                        <option value="飞力普" @(Model.CheType == "飞力普" ? "selected = \"selected\"" : "")>飞力普</option>
                        <option value="TDT128Z" @(Model.CheType == "TDT128Z" ? "selected = \"selected\"" : "")>TDT128Z</option>
                        <option value="TDT1097Z" @(Model.CheType == "TDT1097Z" ? "selected = \"selected\"" : "")>TDT1097Z</option>
                        <option value="万马奔腾" @(Model.CheType == "万马奔腾" ? "selected = \"selected\"" : "")>万马奔腾</option>
                        <option value="深友" @(Model.CheType == "深友" ? "selected = \"selected\"" : "")>深友</option>
                        <option value="百团二号" @(Model.CheType == "百团二号" ? "selected = \"selected\"" : "")>百团二号</option>
                        <option value="tdt118Z" @(Model.CheType == "tdt118Z" ? "selected = \"selected\"" : "")>tdt118Z</option>
                        <option value="小酷跑" @(Model.CheType == "小酷跑" ? "selected = \"selected\"" : "")>小酷跑</option>
                    </select></span></li>
            </ul>


            <ul style="text-align: center;">
                <input type="button" onclick="fn_xiayibu()" class="userbtn" style="width: 50%;" value="下一步">
            </ul>
        </div>

        <div class="qbCon2" style="display: none" id="qd2">
            <ul class="myUl5">
                <li>&nbsp;住宅电话<span>
                    <input type="tel" name="ResidentialPhone" id="ResidentialPhone" value="@Model.ResidentialPhone" class="fxf gx" style="border: 0px" datatype="m" placeholder="住宅电话"></span> </li>

                <li>&nbsp;邮箱<span>
                    <input type="text" name="Email" id="Email" value="@Model.Email" class="fxf gx" style="border: 0px" datatype="m" placeholder="邮箱"></span> </li>

                <li>&nbsp;教育程度<span>
                    <select id="EducationLevel" name="EducationLevel">
                        <option value="小学" @(Model.EducationLevel == "小学" ? "selected = \"selected\"" : "")>小学</option>
                        <option value="初中" @(Model.EducationLevel == "初中" ? "selected = \"selected\"" : "")>初中</option>
                        <option value="中专" @(Model.EducationLevel == "中专" ? "selected = \"selected\"" : "")>中专</option>
                        <option value="高中" @(Model.EducationLevel == "高中" ? "selected = \"selected\"" : "")>高中</option>
                        <option value="大专" @(Model.EducationLevel == "大专" ? "selected = \"selected\"" : "")>大专</option>
                        <option value="本科" @(Model.EducationLevel == "本科" ? "selected = \"selected\"" : "")>本科</option>
                    </select>
                </span></li>

                <li>&nbsp;婚姻状况<span>
                    <select id="MaritalStatus" name="MaritalStatus">
                        <option value="否" @(Model.MaritalStatus == "否" ? "selected = \"selected\"" : "")>否</option>
                        <option value="是" @(Model.MaritalStatus == "是" ? "selected = \"selected\"" : "")>是</option>
                    </select>
                </span></li>

                <li>&nbsp;子女数目<span>
                    <input type="tel" name="ChildrenNumber" id="ChildrenNumber" value="@Model.ChildrenNumber" class="fxf gx" style="border: 0px" datatype="m" placeholder="子女数目"></span> </li>

                <li>&nbsp;来市时间<span>
                    <input type="tel" name="ComingTime" id="ComingTime" value="@Model.ComingTime" class="fxf gx" style="border: 0px" datatype="m" placeholder="来市时间"></span> </li>

                <li>&nbsp;居住状况<span>
                    <select id="LivingConditions" name="LivingConditions">
                        <option value="自有" @(Model.LivingConditions == "自有" ? "selected = \"selected\"" : "")>自有</option>
                        <option value="按揭" @(Model.LivingConditions == "按揭" ? "selected = \"selected\"" : "")>按揭</option>
                        <option value="租赁" @(Model.LivingConditions == "租赁" ? "selected = \"selected\"" : "")>租赁</option>
                        <option value="公司宿舍" @(Model.LivingConditions == "公司宿舍" ? "selected = \"selected\"" : "")>公司宿舍</option>
                    </select>
                </span></li>

                <li>&nbsp;现居住地址<span>
                    <input type="text" name="ResidenceAddress" id="ResidenceAddress" value="@Model.ResidenceAddress" class="fxf gx" style="border: 0px" datatype="m" placeholder="现居住地址"></span> </li>
            </ul>
            <ul style="text-align: center;">
                <input type="button" onclick="fn_fanhui()" class="userbtn" style="width: 35%;" value="返回">
            </ul>
        </div>
        <div class="qbCon2">
            <textarea name="Remark" id="Remark" cols="" rows="" style="width: 100%; height: 6rem; border: none; padding: 0.2rem" placeholder="备注"></textarea>
        </div>
        <input type="button" onclick="fn_tijiao()" class="userbtn" id="tijiao" value="提交">


    }

    <script src="~/Content/js/Validform_v5.3.2_min.js"></script>
    <script type="text/javascript">
        $(function () {
            if ("@Model" != null) {
                $("#Remark").val("@Model.Remark");
            }

        });

        function fn_tijiao() {
            $("#ModifyRecruitmentMaterials").submit();
        }

        function fn_xiayibu() {
            $("#qd2").show();
            $("#qd1").hide();
            $("#tijiao").show();
        }

        function fn_fanhui() {
            $("#qd2").hide();
            $("#qd1").show();
            $("#tijiao").hide();
        }

        window.alert = function (name) {
            var iframe = document.createElement("IFRAME");
            iframe.style.display = "none";
            iframe.setAttribute("src", 'data:text/plain,');
            document.documentElement.appendChild(iframe);
            window.frames[0].window.alert(name);
            iframe.parentNode.removeChild(iframe);
        };
    </script>


</body>
</html>
