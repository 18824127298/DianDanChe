@using CheDaiBaoWeChatModel.Models;
@model List<CarIllegal>
@{
    ViewBag.Title = "车辆违章记录";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="target-densitydpi=device-dpi,width=640, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="format-detection" content="telephone=no" />
    <link href="~/Content/css/cartype.css" rel="stylesheet" />
    <link href="~/Content/css/swiper-3.3.1.min.css" rel="stylesheet" />
    <style>
        .swiper-container {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .swiper-slide {
            overflow: auto;
        }

        .trad-head a {
            width: 25%;
        }
    </style>
</head>
<body>
    <div class="trad-head clearfix">
        <a class="current" href="javascript:;">全部</a>
        <a href="javascript:;">待支付</a>
        <a href="javascript:;">已支付</a>
        <a href="javascript:;">完成</a>
    </div>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarIllegal carIllegal in Model)
                    {
                        <ul class="list-item">
                            <li>
                                <p class="title">车牌：@carIllegal.LicensePlate</p>
                                <p class="title">地点：@carIllegal.IllegalAddress</p>
                            </li>
                            <li>
                                <p class="title">金额：@carIllegal.FinePrice.Value.ToString("N0")</p>
                                <p class="title">时间：@carIllegal.IllegalTime.Value.ToString("yyyy/MM/dd")</p>
                            </li>
                            <li>
                                <p class="title">手续费：@carIllegal.AroundFee.Value.ToString("N0")</p>
                                <p class="title">分数：@carIllegal.Points</p>
                            </li>
                        </ul>
                    }
                </div>
            </div>
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarIllegal carIllegal in Model.FindAll(o => o.ProcessingState == 0))
                    {
                        <ul class="list-item">
                            <li>
                                <p class="title">车牌：@carIllegal.LicensePlate</p>
                                <p class="title">地点：@carIllegal.IllegalAddress</p>
                            </li>
                            <li>
                                <p class="title">金额：@carIllegal.FinePrice.Value.ToString("N0")</p>
                                <p class="title">时间：@carIllegal.IllegalTime.Value.ToString("yyyy/MM/dd")</p>
                            </li>
                            <li>
                                <p class="title">手续费：@carIllegal.AroundFee.Value.ToString("N0")</p>
                                <p class="title">分数：@carIllegal.Points</p>
                            </li>
                        </ul>
                    }
                </div>
            </div>
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarIllegal carIllegal in Model.FindAll(o => o.ProcessingState == 1))
                    {
                        <ul class="list-item">
                            <li>
                                <p class="title">车牌：@carIllegal.LicensePlate</p>
                                <p class="title">地点：@carIllegal.IllegalAddress</p>
                            </li>
                            <li>
                                <p class="title">金额：@carIllegal.FinePrice.Value.ToString("N0")</p>
                                <p class="title">时间：@carIllegal.IllegalTime.Value.ToString("yyyy/MM/dd")</p>
                            </li>
                            <li>
                                <p class="title">手续费：@carIllegal.AroundFee.Value.ToString("N0")</p>
                                <p class="title">分数：@carIllegal.Points</p>
                            </li>
                        </ul>
                    }
                </div>
            </div>
            <div class="swiper-slide">
                <div class="trad-con">
                    @foreach (CarIllegal carIllegal in Model.FindAll(o => o.ProcessingState == 2))
                    {
                        <ul class="list-item">
                            <li>
                                <p class="title">车牌：@carIllegal.LicensePlate</p>
                                <p class="title">地点：@carIllegal.IllegalAddress</p>
                            </li>
                            <li>
                                <p class="title">金额：@carIllegal.FinePrice.Value.ToString("N0")</p>
                                <p class="title">时间：@carIllegal.IllegalTime.Value.ToString("yyyy/MM/dd")</p>
                            </li>
                            <li>
                                <p class="title">手续费：@carIllegal.AroundFee.Value.ToString("N0")</p>
                                <p class="title">分数：@carIllegal.Points</p>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/Content/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/js/swiper.jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        ShowMenu(3);

        var mySwiper = new Swiper('.swiper-container', {
            onSlideChangeStart: function (swiper) {
                var index = swiper.activeIndex;
                $(".trad-head a").removeClass('current');
                $(".trad-head a").eq(index).addClass('current');
            }
        });
        $(".trad-head a").click(function () {
            var index2 = $(this).index();
            $(".trad-head a").removeClass('current');
            $(".trad-head a").eq(index2).addClass('current');
            mySwiper.slideTo(index2);//切换到第一个slide，速度为1秒
        });

    });
</script>
