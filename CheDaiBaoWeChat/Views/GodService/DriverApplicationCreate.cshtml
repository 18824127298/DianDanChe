@using CheDaiBaoWeChatModel.Models;
@model DriverApplication
@{
    ViewBag.Title = "DriverApplicationCreate";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="target-densitydpi=device-dpi,width=640, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="format-detection" content="telephone=no" />
    <title>申请</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        input, button {
            border: 0;
            box-shadow: none;
        }


        #application {
            background: #fafafa;
            margin: 0 auto;
            width: 100%;
            height: 100%;
        }

            #application input,
            #application button {
                width: 100%;
                padding: 5px;
                box-sizing: border-box;
                color: #3697d5;
                height: 50px;
            }

                #application input:first-child {
                    border-bottom: 1px solid #fafafa;
                }

            #application button {
                width: 90%;
                display: block;
                background: #3697d5;
                color: #ffffff;
                border-radius: 4px;
                -webkit-border-radius: 4px;
                margin: 0 auto;
                margin-top: 26px;
            }

            #application div {
                border: 1px solid black;
                text-align: center;
                width: 80%;
                margin: 0 auto;
                margin-top: 36px;
                height: 100px;
            }
    </style>
    <script src="~/Content/js/jquery-1.11.3.js"></script>
</head>
<body>
    @if (Model == null || Model.IsAudit == (int)CheDaiBaoWeChatModel.AuditResult.未通过)
    {
        using (Html.BeginForm("DriverApplicationCreate", "GodService", FormMethod.Post, new { id = "DriverApplicationCreate" }))
        {      
        <div id="application">
            <div>
                <input id="FullName" name="FullName" type="text" placeholder="输入您的姓名">
                <input type="text" id="Phone" name="Phone" placeholder="输入您的手机号码">
            </div>
            <button type="submit">立即申请</button>
        </div>
        }
    }
    else
    {
        if (Model.IsAudit != (int)CheDaiBaoWeChatModel.AuditResult.已通过)
        {
        <p class="bq003" style="font-size: 2rem; line-height: 12rem; text-align: center">正在审核中，请耐心等待</p>
        }
        else
        {
        <p class="bq003" style="font-size: 2rem; line-height: 12rem; text-align: center">恭喜！您的申请已通过</p>
        }
    }
</body>
